word = 'ananas'
count = 0
for letter in word:
    if letter == 'a':
        count = count + 1
print(count)
#####################################################################
linhas = [
            "    O poeta é um fingidor.      \n",
            "    Finge tão completamente     \n",
            "    Que chega a fingir que é dor\n",
            "    A dor que deveras sente.    \n",
            "                Fernando Pessoa.\n"
            ]

for linha in linhas:
    linha_sem_brancos = linha.strip()
    print(linha_sem_brancos)
    palavras = linha_sem_brancos.split()
    print(palavras)
    
   
