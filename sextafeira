a= "fulano"
n= len(a)

#for k in range(n+1):
#    print(a[:k])
#print("--------")
#for k in range (n,0,-1):
#    print(a[:k], 'k=',k)

#print ("______________________segundo metodo")

k=0
while k<n:
    print(a[:k])
    k=k+1
k=n
while k>=0:
    print(a[:k])
    k=k-1
    
