##########################################################################################################

b = str(input("Digite uma frase "))
#a=('a','e','i','o','u',"raul")
#n=len(a)
n=len(b)
numvogal=0
consoantes=[]
for k in range(5):
    if b[k] in ('a','e','i','o','u'):
        print("achou vogal mane")
        numvogal=numvogal+1
    else:
        consoantes.append(b[k])

print("o numero de vogais=",numvogal)
print("as consoantes são ",consoantes )


